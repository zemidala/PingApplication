<Window x:Class="PingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ping Application" Height="800" Width="1200"
        Loaded="WindowLoaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Вкладки -->
        <TabControl Grid.Row="0" Height="40" Name="MainTabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Ping 1" Tag="Ping1"/>
            <TabItem Header="Ping 2" Tag="Ping2"/>
            <TabItem Header="Ping 3" Tag="Ping3"/>
            <TabItem Header="Настройки" Tag="Settings"/>
        </TabControl>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <!-- Содержимое для пингов -->
            <Grid Name="PingContent" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Панель настроек пинга -->
                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Host или IP:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="HostComboBox" Width="150" IsEditable="True"/>
                        <TextBlock Text="Размер пакетов:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <TextBox Name="PacketSizeTextBox" Width="50" Text="32" Margin="0,0,10,0"/>
                        <Button Name="StartButton" Content="Ping" Width="80" Margin="0,0,10,0" Click="StartButton_Click"/>
                        <Button Name="StopButton" Content="Стоп" Width="80" Click="StopButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Основной график пинга -->
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Name="CurrentHostTextBlock" Text="График пинга" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                        <Canvas Name="MainPingCanvas" Grid.Row="1" Background="LightGray"/>
                    </Grid>
                </Border>

                <!-- Нижняя панель с двумя графиками (3/4 и 1/4) -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/4 ширины -->
                        <ColumnDefinition Width="1*"/>
                        <!-- 1/4 ширины -->
                    </Grid.ColumnDefinitions>

                    <!-- График прогресса (3/4 ширины) -->
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Прогресс" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <Canvas Name="ProgressCanvas" Grid.Row="1" Background="LightGray"/>
                        </Grid>
                    </Border>

                    <!-- График количества пингов (1/4 ширины) -->
                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Количество &quot;пингов&quot;" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <Canvas Name="StatisticsCanvas" Grid.Row="1" Background="LightGray"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Статусная строка -->
                <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="StatusTextBlock" Text="Готов" Margin="0,0,20,0"/>
                        <TextBlock Name="TimeTextBlock" Text="Время: 00:00"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Содержимое для настроек -->
            <!-- Содержимое для настроек -->
            <Grid Name="SettingsContent" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Дерево настроек (левая панель) -->
                <TreeView Grid.Column="0" Name="SettingsTreeView" SelectedItemChanged="SettingsTreeView_SelectedItemChanged" Margin="5">
                    <TreeViewItem Header="Общие настройки" Tag="General">
                        <TreeViewItem Header="Запуск и закрытие программы" Tag="Startup"/>
                        <TreeViewItem Header="Ярлыки" Tag="Shortcuts"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Вид" Tag="View">
                        <TreeViewItem Header="Панель пингования" Tag="PingPanel"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Настройки пингования" Tag="PingSettings">
                        <TreeViewItem Header="Настройки пингования" Tag="PingConfig"/>
                        <TreeViewItem Header="Список пингования" Tag="PingList"/>
                        <TreeViewItem Header="Логи" Tag="Logs"/>
                    </TreeViewItem>
                </TreeView>

                <!-- Панель настроек (правая панель) -->
                <Grid Grid.Column="1" Margin="0,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок настроек -->
                    <TextBlock Grid.Row="0" Name="SettingsTitle" Text="Настройки" 
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   FontSize="16" FontWeight="Bold" 
                   Margin="15,10,0,5"/>

                    <!-- Область настроек с бордером -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="3" 
                Margin="10,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Область настроек с прокруткой -->
                            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel Name="SettingsPanel">
                                    <!-- Здесь будут отображаться настройки -->
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Кнопки действий -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
                                <Button Content="Применить" Width="100" Margin="0,0,10,0" Click="ApplySettings_Click"/>
                                <Button Content="Отмена" Width="100" Margin="0,0,10,0" Click="CancelSettings_Click"/>
                                <Button Content="По умолчанию" Width="100" Click="DefaultSettings_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>