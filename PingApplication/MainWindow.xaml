<Window x:Class="PingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ping Application" Height="800" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Вкладки -->
        <TabControl Grid.Row="0" Height="40" Name="MainTabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Ping 1" Tag="Ping1"/>
            <TabItem Header="Ping 2" Tag="Ping2"/>
            <TabItem Header="Ping 3" Tag="Ping3"/>
            <TabItem Header="Настройки" Tag="Settings"/>
        </TabControl>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <!-- Содержимое для пингов -->
            <Grid Name="PingContent" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Панель настроек пинга -->
                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Host или IP:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="HostComboBox" Width="150" IsEditable="True"/>
                        <TextBlock Text="Размер пакетов:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <TextBox Name="PacketSizeTextBox" Width="50" Text="32" Margin="0,0,10,0"/>
                        <Button Name="StartButton" Content="Ping" Width="80" Margin="0,0,10,0" Click="StartButton_Click"/>
                        <Button Name="StopButton" Content="Стоп" Width="80" Click="StopButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Основной график пинга -->
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Name="CurrentHostTextBlock" Text="График пинга" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                        <Canvas Name="MainPingCanvas" Grid.Row="1" Background="LightGray"/>
                    </Grid>
                </Border>

                <!-- Нижняя панель с двумя графиками (3/4 и 1/4) -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <!-- 3/4 ширины -->
                        <ColumnDefinition Width="1*"/>
                        <!-- 1/4 ширины -->
                    </Grid.ColumnDefinitions>

                    <!-- График прогресса (3/4 ширины) -->
                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Прогресс" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <Canvas Name="ProgressCanvas" Grid.Row="1" Background="LightGray"/>
                        </Grid>
                    </Border>

                    <!-- График количества пингов (1/4 ширины) -->
                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Количество &quot;пингов&quot;" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <Canvas Name="StatisticsCanvas" Grid.Row="1" Background="LightGray"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Статусная строка -->
                <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="StatusTextBlock" Text="Готов" Margin="0,0,20,0"/>
                        <TextBlock Name="TimeTextBlock" Text="Время: 00:00"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Содержимое для настроек -->
            <Grid Name="SettingsContent" Visibility="Collapsed">
                <TextBlock Text="Настройки" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            </Grid>
        </Grid>
    </Grid>
</Window>